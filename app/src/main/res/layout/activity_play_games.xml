<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorAccent"
    tools:context=".PlayGamesActivity">
    <ImageView
        android:id="@+id/castle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/castle"
        android:layout_marginTop="20dp"
        />
 <TextView
     android:id="@+id/playstore_textview"
     android:layout_width="match_parent"
     android:layout_below="@+id/castle"
     android:layout_height="wrap_content"
     android:text="Lets go to the Playstore->Selent Genre"
     android:textAlignment="center"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
     android:textSize="20sp"
     android:textColor="?attr/textcolor"
     android:background="?attr/colorPrimaryDark"
     android:layout_marginTop="20dp"
     android:padding="10dp"
     android:textStyle="bold"
     />
    <Spinner
        android:id="@+id/spinner"
        android:layout_below="@id/playstore_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:spinnerMode="dropdown"/>
   <!-- <Button
        android:id="@+id/playstore_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_below="@id/playstore_textview"
        android:layout_marginTop="10dp"
        android:text="Playstore"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="?attr/colorPrimaryDark"
        />-->

    <TextView
        android:id="@+id/gaming_sites_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="?attr/colorPrimaryDark"
        android:text="Gaming Site Here"
        android:textSize="20sp"
        android:textColor="?attr/textcolor"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/gaming_site_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_below="@id/gaming_sites_textview"
        android:layout_marginTop="10dp"
        android:text="GO!"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="?attr/colorPrimaryDark"
        />
</RelativeLayout>